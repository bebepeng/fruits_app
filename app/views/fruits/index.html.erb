<header>
  <div class="header_container">
    <div class="left_header">
      <%= image_tag "oFruit.png" %>
    </div>
    <div class="right_header">
      <a href="/">Home</a>
    </div>
  </div>
</header>

<h1>Fruits</h1>
<div class="content">
  <ul>
    <% @fruits.each do |fruit| %>
      <li><%= fruit[:name] %> <a href="/fruits/<%= fruit[:id] %>">View Details</a></li>
    <% end %>
  </ul>

  <a href="/fruits/new">Add Fruit</a>
</div>