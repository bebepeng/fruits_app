<%= form_for @fruit do |f| %>
  <% if @fruit.errors.present? %>
    <div class="errors">
      <h1>The following are errors:</h1>
      <ul class="error-list">
        <% @fruit.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description, class: "form-label" %>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.submit class: "form-button" %>
  </p>
<% end %>